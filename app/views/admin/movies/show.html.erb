<% @page_title = @movie.title %>
<h1><%= @page_title %></h1>

<div class="toolbar">
    <%= link_to "作品情報の編集", edit_admin_movie_path %>
</div>

<table class="attr">
  <tr>
    <th>作品ID</th>
    <td><%= @movie.id %></td>
  </tr>
  <tr>
    <th width="100">タイトル</th>
    <td><%= @movie.title %></td>
  </tr>
  <tr>
    <th>作品概要</th>
    <td><%= simple_format(@movie.explanation) %></td>
  </tr>
  <tr>
    <th>公開開始日</th>
    <td><%= @movie.released_at.strftime("%Y/%m/%d") %></td>
  </tr>
  <tr>
    <th>公開終了日</th>
    <td><%= @movie.expired_at.try(:strftime, "%Y/%m/%d") %></td>
  </tr>
  <tr>
    <th>上映時間</th>
    <td><%= @movie.screening_time %>分</td>
  </tr>
  <tr>
    <th>配給</th>
    <td><%= @movie.distribution %></td>
  </tr>
  <tr>
    <th>監督</th>
    <td><%= @movie.director %></td>
  </tr>
  <tr>
    <th>公開／非公開</th>
    <td>
     <% if @movie.release_flag == 1 %>
     公開
     <% else %>
     非公開
     <% end %>
    </td>
  </tr>
</table>