<h2>管理者ログイン</h2>
<% if flash.alert %><p class="alert"><%= flash.alert %></p><% end %>
<%= form_tag "admin/adminsession", id: "login-form" do %>
    <div>
        <label>ログインID：</label>
        <input type="text" name="name">
    </div>
    <div>
        <label>パスワード：</label>
        <input type="password" name="password">
    </div>
    <div>
        <input type="submit" value="ログイン">
    </div>
<% end %>