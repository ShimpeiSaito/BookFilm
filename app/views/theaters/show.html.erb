<% @page_title = @theater.store_name + "の上映作品一覧" %>

<h1><%= @page_title %></h1>

<% if @movies.present? %>
    <table class="list">
        <thead>
            <tr>
                <th>タイトル</th>
                <th>作品概要</th>
                <th>上映選択</th>
            </tr>
        </thead>
        <tbody>
            <% @movies.each do |movie| %>
                <tr>
                    <td><%= link_to movie.title, movie_path(movie.id) %></td>
                    <td><%= movie.explanation.truncate(30) %></td>
                    <td><%= link_to "上映選択", theater_schedule_path(theater_id: @theater.id,id: movie.id) %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <%= paginate @movies %>
<% else %>
    <p>作品がありません。</p>
<% end %>