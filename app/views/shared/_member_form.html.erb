<%= render "shared/errors", obj: @member %>

<table class="attr">
    <tr>
        <th><%= form.label :login_id, "ログインID" %></th>
        <td><%= form.text_field :login_id %></td>
    </tr>
    <% if @member.new_record? %>
        <tr>
            <th><%= form.label :password, "パスワード" %></th>
            <td><%= form.text_field :password %></td>
        </tr>
    <% end %>
    <tr>
        <th><%= form.label :name, "氏名" %></th>
        <td><%= form.text_field :name %></td>
    </tr>
    <tr>
        <th><%= form.label :birthday, "生年月日", for: "member_birthday_1i" %></th>
        <td><%= form.date_select :birthday, start_year: 1940, end_year: Time.current.year, use_month_numbers: true %></td>
    </tr>
    <tr>
        <th><%= form.label :tel , "電話番号"%></th>
        <td><%= form.text_field :tel %></td>
    </tr>
    <tr>
        <th><%= form.label :email, "メールアドレス" %></th>
        <td><%= form.text_field :email %></td>
    </tr>
    <tr>
        <th><%= form.label :payment, "クレジットカード番号" %></th>
        <td><%= form.text_field :payment %></td>
    </tr>
</table>