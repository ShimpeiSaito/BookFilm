<div class="big-title">
    <a href="/">
        <img src="/assets/bookfilm_logo.png" alt="bookfilm_logo" width=25% height=25%>
    </a>
</div>


<% if controller.kind_of?(Admin::Base) %>
    <% if current_member %>
        <ul class="account-menu">
            <%= menu_link_to current_member.name + "さん", admin_admins_path %>
            <%= menu_link_to "ログアウト", admin_adminsession_path,
                    method: :delete, data: { confirm: "ログアウトしますか？" } %>
        </ul>
    <% end %>
    <%= render "shared/admin_menubar" %>
<% else %>
    <% if current_member %>
        <ul class="account-menu">
            <%= menu_link_to current_member.name + "さん", :account %>
            <%= menu_link_to "ログアウト", :session,
                    method: :delete, data: { confirm: "ログアウトしますか？" } %>
        </ul>
    <% end %>
    <%= render "shared/menubar" %>
<% end %>
